<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/md_white_1000"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/icon"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/favo"
                android:layout_marginRight="2dp"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_alignTop="@+id/shopppin"
                android:layout_toStartOf="@+id/navo" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/navo"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:paddingTop="7dp"
                android:layout_alignBottom="@+id/dolar"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/shopppin"
                android:src="@drawable/ic_shopping_basket_black_24dp1"
                android:layout_alignBottom="@+id/navo"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="10dp"
                android:layout_toStartOf="@+id/favo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="12sp"
                android:id="@+id/dolar"
                android:text="$100"
                android:textStyle="bold"
                android:textColor="#fe7777"
                android:layout_below="@+id/lorem"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"

               />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/lorem"
                android:text="Lorem ipsum dolor sit amet consecteur adipiscing elit."
                android:textColor="#a9adb2"
                android:layout_below="@+id/urun"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                android:id="@+id/urun"
                android:textColor="@color/md_black_1000"
                android:layout_below="@id/icon"
                android:layout_marginLeft="10dp"

                />
        </RelativeLayout>
</LinearLayout>