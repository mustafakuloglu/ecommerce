<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/activity_e_bg"
        >

        <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="270dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/md_white_1000"
        >
        <ImageView
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:id="@+id/icon"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/favo"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:layout_alignTop="@+id/shopppin"
            android:layout_toStartOf="@+id/navo" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/navo"
            android:paddingTop="10dp"
            android:layout_alignTop="@+id/favo"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/shopppin"
            android:paddingTop="10dp"
            android:layout_alignBottom="@+id/dolar"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:layout_marginEnd="46dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="12sp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:id="@+id/dolar"
            android:textStyle="bold"
            android:textColor="#fe7777"
            android:layout_below="@+id/lorem"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/lorem"
            android:textColor="#a9adb2"
            android:paddingTop="2dp"
            android:layout_below="@+id/urun"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:id="@+id/urun"
            android:textColor="@color/md_black_1000"
            android:paddingTop="70dp"
            android:layout_centerVertical="true"
           />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>