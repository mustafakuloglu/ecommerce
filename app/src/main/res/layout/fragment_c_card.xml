<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="top"
            android:background="@color/activity_e_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_big_title"
                android:text="Subcategory"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/menu_light"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_big_title_right"
                android:text="VIEW ALL"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/menu_light"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"

                />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="top"
            android:background="@color/md_white_1000"
            android:elevation="1dp"
            android:id="@+id/rl1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >
             <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/item_icon"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="8dp"
                android:layout_alignParentLeft="true"

                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/item_menu"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_more_vert_black_24dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_title"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/item_icon"
                android:layout_marginLeft="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black_text"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_text"
                android:textSize="13dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@id/item_icon"
                android:layout_toLeftOf="@id/item_menu"
                android:layout_marginLeft="8dp"
                android:textColor="@color/menu_light"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_price"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/button_red"

                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:scaleX="0.45"
                android:scaleY="0.45"
                android:progressTint="@color/menu_light"
                android:layout_marginLeft="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/item_icon" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="134dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="top"
                android:background="@color/md_white_1000"
                android:elevation="1dp"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/item_icon2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentLeft="true"

                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/item_menu2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_more_vert_black_24dp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_title2"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/item_icon2"
                    android:layout_marginLeft="8dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_text"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_text2"
                    android:textSize="13dp"
                    android:layout_marginTop="24dp"
                    android:layout_toRightOf="@id/item_icon2"
                    android:layout_toLeftOf="@id/item_menu2"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/menu_light"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_price2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/button_red"

                    />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:scaleX="0.45"
                    android:scaleY="0.45"
                    android:progressTint="@color/menu_light"
                    android:layout_marginLeft="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/item_icon2" />
        </RelativeLayout>
        </RelativeLayout>



</LinearLayout>