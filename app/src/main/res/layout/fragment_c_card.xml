<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/fragment_c_card_view"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:elevation="100dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/activity_e_bg"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="top"
            android:background="@color/activity_e_bg"



            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_big_title"
                android:text="Subcategory"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/menu_light"
                android:layout_toEndOf="@id/item_big_title"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_big_title_right"
                android:text="VIEW ALL"
                android:textSize="15sp"
                android:textColor="@color/menu_light"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"

                />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="top"
            android:background="@color/md_white_1000"
            android:elevation="1dp"
            android:id="@+id/rl1"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/item_icon1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/menu_light"
                />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/item_icon"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="38dp"
                android:layout_alignParentLeft="true"

                />
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/item_menu"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more_vert_black_24dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_title"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/item_icon1"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_text"
                android:layout_below="@+id/item_title"
                android:layout_toRightOf="@id/item_icon1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/menu_light"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_price"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/button_red"

                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="23dp"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:progressTint="@color/menu_light"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/rl1"
            android:layout_marginBottom="4dp"
            android:layout_gravity="top"
            android:background="@color/md_white_1000"
            android:elevation="1dp"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/item_icon3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/menu_light"
                />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/item_icon2"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="38dp"
                android:layout_alignParentLeft="true"

                />
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/item_menu2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more_vert_black_24dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_title2"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/item_icon3"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_text2"
                android:layout_below="@+id/item_title2"
                android:layout_toRightOf="@id/item_icon3"
                android:layout_marginLeft="10dp"
                android:textColor="@color/menu_light"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_price2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/button_red"

                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar2"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="23dp"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:progressTint="@color/menu_light"/>

        </RelativeLayout>
        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>