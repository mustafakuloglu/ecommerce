<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:background="@color/md_white_1000"
            android:id="@+id/a_item"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/photo_bg_a"
                android:background="@color/activity_e_card_bg"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:layout_above="@+id/imageView_a" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photo_a"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_a"
                android:layout_alignParentTop="true"
                android:layout_marginTop="113dp"
                android:layout_marginLeft="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:id="@+id/imageView_a"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_a"
                android:layout_below="@+id/title_a"
                android:layout_marginLeft="8dp"
                android:textColor="@color/button_red"

                />

        </RelativeLayout>



</LinearLayout>