<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivityJ"
    android:background="@color/md_white_1000">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/actiontool_bar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="label"
        android:id="@+id/textView"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentStart="true"
        android:textColor="@color/activity_e_card_bg"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder text"
        android:id="@+id/textView2"
        android:paddingLeft="12dp"
        android:paddingTop="7dp"
        android:textSize="18dp"
        android:textColor="@color/color_placehold"

        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />
    <View
        android:layout_below="@id/textView2"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="1.5dp"
        android:background="@color/line_color"
        android:id="@+id/underline"/>
    <TextView
                android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="label"
        android:id="@+id/textView3"
        android:layout_below="@+id/underline"
        android:layout_alignParentStart="true"
        android:textColor="@color/activity_e_card_bg"
        android:paddingLeft="14dp"
        android:paddingTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some text "
        android:id="@+id/textView4"
        android:textColor="@color/black_text"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:textSize="18dp"

        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />
    <View
        android:layout_below="@id/textView4"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="1.5dp"
        android:background="@color/line_color"
        android:id="@+id/underline2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="label"
        android:id="@+id/textView5"
        android:layout_below="@+id/underline2"
        android:layout_alignParentStart="true"
        android:textColor="@color/activity_e_card_bg"
        android:paddingLeft="12dp"
        android:paddingTop="24dp"/>

    <Spinner
        android:entries="@array/Weight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
       android:layout_below="@id/textView5"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"/>
    <View
        android:layout_below="@id/spinner"
        android:layout_marginTop="4dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="1.5dp"
        android:background="@color/line_color"
        android:id="@+id/underline3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="label"
        android:id="@+id/textView6"
        android:layout_below="@+id/underline3"
        android:layout_alignParentStart="true"
        android:textColor="@color/activity_e_card_bg"
        android:paddingLeft="12dp"
        android:paddingTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="label"
        android:id="@+id/textView7"
        android:layout_below="@+id/underline3"
        android:layout_alignParentStart="true"
        android:textColor="@color/activity_e_card_bg"
        android:paddingLeft="192dp"
        android:paddingTop="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textView7"
        android:id="@+id/j_linear"
        android:weightSum="1">
        <Spinner
        android:paddingTop="7dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
            android:backgroundTint="@color/underline"
            style="@style/Widget.AppCompat.Spinner.Underlined"
        android:id="@+id/spinner3"
        android:entries="@array/Weight"/>
        <Spinner
        android:paddingTop="7dp"
        android:layout_weight="0.5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
            style="@style/Widget.AppCompat.Spinner.Underlined"
        android:backgroundTint="@color/underline"
        android:entries="@array/Weight"
        android:focusableInTouchMode="false" />
    </LinearLayout>



    <CheckBox
        android:layout_marginTop="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option"
        android:id="@+id/checkBox"
        android:layout_below="@+id/j_linear"
        android:layout_alignStart="@+id/j_linear"
        android:buttonTint="@color/button_red"
        android:checked="true"
        android:clickable="false"/>

    <CheckBox
        android:layout_marginTop="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/j_linear"
        android:layout_toEndOf="@+id/radioButton"
        android:clickable="false"
        android:layout_marginLeft="45dp"
        />

    <RadioButton
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option"
        android:id="@+id/radioButton"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:buttonTint="@color/button_red"
        android:checked="true"
        android:clickable="false"/>

    <RadioButton
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/checkBox2"
        android:layout_toEndOf="@+id/radioButton"
        android:clickable="false"
        android:layout_marginLeft="45dp"
        />

    <LinearLayout
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:weightSum="1"
        android:layout_below="@id/radioButton">
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp"
            android:text="BUTTON"
            android:layout_marginRight="16dp"
            android:id="@+id/button"
            android:backgroundTint="@color/menu_light"
            android:textColor="@color/md_white_1000"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp"
            android:text="BUTTON"
            android:id="@+id/button2"
            android:backgroundTint="@color/button_red"
            android:textColor="@color/material_drawer_background"/>
    </LinearLayout>
</RelativeLayout>
</ScrollView>
