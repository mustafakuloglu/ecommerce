<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scroll">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gm.com.ecommerce.activities.MainActivity"
    android:background="@color/activity_e_bg"
    android:focusableInTouchMode="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subcatagory"
        android:textColor="@color/menu_light"
        android:id="@+id/sub_text_g"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW ALL"
        android:textColor="@color/menu_light"
        android:textStyle="bold"
        android:id="@+id/view_all_g"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
       />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_g"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="4dp"/>
    <TextView
        android:layout_below="@id/recycler_view_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subcatagory"
        android:textColor="@color/menu_light"
        android:id="@+id/sub_text_g2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"/>
    <TextView
        android:layout_below="@id/recycler_view_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW ALL"
        android:textColor="@color/menu_light"
        android:textStyle="bold"
        android:id="@+id/view_all_g2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_g2"
        android:layout_below="@+id/recycler_view_g"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="4dp"/>


</RelativeLayout>
</ScrollView>
