<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:background="@color/fra_g_bg"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:id="@+id/imageViewv"
            android:background="@color/activity_e_card_bg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Product"
            android:textStyle="bold"
            android:textColor="#f0f2f5"
            android:id="@+id/textView15"
            android:textSize="14sp"
            android:layout_below="@+id/imageViewv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$100"
            android:textStyle="bold"
            android:textColor="#f0f2f5"
            android:textSize="12sp"
            android:id="@+id/textView16"
            android:layout_below="@+id/textView15"
            android:layout_alignStart="@+id/textView15" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/imageView13"
            android:src="@drawable/ic_more_vert_black_24dp1"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/imageView14"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/imageView14"
            android:src="@drawable/ic_more_vert_black_24dp1"
            android:layout_alignTop="@+id/imageView15"
            android:layout_toStartOf="@+id/imageView15" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/imageView15"
            android:src="@drawable/ic_shopping_basket_black_24dp2"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/textView16"
            android:layout_toStartOf="@+id/imageView13" />


    </RelativeLayout>

</LinearLayout>
