<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_e_bg"
    tools:context="gm.com.ecommerce.activities.MainActivity"
    android:focusableInTouchMode="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_big_title"
        android:text="Sort by"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:textColor="@color/menu_light"
        android:layout_toEndOf="@id/item_big_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_big_title_right"
        android:text="Sort by"
        android:paddingRight="20dp"
        android:textSize="14sp"
        android:textColor="@color/menu_light"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:background="@color/activity_e_bg"
        android:id="@+id/relative"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_vie"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:scrollbars="vertical"
            android:layout_marginRight="5dp"
            android:fadeScrollbars="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_e_bg"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_alignTop="@+id/item_big_title"
        android:layout_toEndOf="@+id/item_big_title"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sort by"
        android:textStyle="bold"
        android:textColor="@color/menu_light"
        android:id="@+id/textView11"
        android:textSize="14sp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_marginStart="48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_alignTop="@+id/textView11"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@+id/textView11" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/item_big_title_right"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
    </ScrollView>