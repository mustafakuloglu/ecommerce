<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_e_bg"
    tools:context="gm.com.ecommerce.activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_big_title"
        android:text="Subcategory"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textColor="@color/menu_light"
        android:layout_toEndOf="@id/item_big_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_big_title_right"
        android:text="VIEW ALL"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:textColor="@color/menu_light"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:background="@color/activity_e_bg"
        android:id="@+id/relative"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_vie"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_e_bg"/>
    </RelativeLayout>



</RelativeLayout>
