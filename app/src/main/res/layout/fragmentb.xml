<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusableInTouchMode="false"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_e_bg"
    tools:context="gm.com.ecommerce.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_e_bg"
        android:id="@+id/relative"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_big_title"
            android:text="Subcategory"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/menu_light"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_big_title_right"
            android:text="VIEW ALL"
            android:gravity="right"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/menu_light"

          />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_vie"
            android:layout_marginTop="40dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="@color/activity_e_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edeff2"
        android:layout_below="@id/relative"
        android:layout_marginLeft="5dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub_a"
            android:text="VIEW ALL"
            android:textStyle="bold"
            android:paddingRight="15dp"
            android:textColor="@color/menu_light"
            android:layout_alignTop="@+id/view_a"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_a"
            android:text="Subcatagory "
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/menu_light"
            android:layout_below="@+id/top_rel"
            android:layout_alignStart="@+id/top_rel" />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="40dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/recycler_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</RelativeLayout>
</ScrollView>