<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_e_bg"
    tools:context="gm.com.ecommerce.activities.MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_big_title"
        android:background="@color/activity_e_bg"
        android:id="@+id/relative"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_vie"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_e_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edeff2"
        android:layout_marginTop="330dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub_a"
            android:text="VIEW ALL"
            android:textStyle="bold"
            android:paddingRight="15dp"
            android:textColor="@color/menu_light"
            android:layout_alignTop="@+id/view_a"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_a"
            android:text="Subcatagory "
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/menu_light"
            android:layout_below="@+id/top_rel"
            android:layout_alignStart="@+id/top_rel" />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="40dp"
            android:id="@+id/recycler_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_big_title"
        android:text="Subcategory"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/menu_light"
        android:layout_alignTop="@+id/item_big_title_right"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_big_title_right"
        android:text="VIEW ALL"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/menu_light"
        android:paddingRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
</ScrollView>